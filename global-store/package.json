{
  "name": "global-store",
  "version": "1.0.0",
  "description": "",
  "browser": "lib/index.js",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "index.d.ts",
  "jsnext:main": "es/index.js",
  "scripts": {
    "clean": "rimraf build/*",
    "typecheck": "tsc --pretty --noEmit",
    "build": "npm run clean && npm run typecheck && npm run build:lib && npm run build:lib:esm && npm run build:umd && npm run build:umd:min && npm run build:es && npm run build:copyfiles",
    "build:lib": "cross-env BABEL_ENV=es5_cjs babel ./src --out-dir ./build/lib --ignore 'src/**/*.test.ts,src/**/*.test.js,src/**/*.d.ts' --extensions '.ts,.tsx,.js'",
    "build:lib:esm": "cross-env BABEL_ENV=es5_esm babel ./src/index.ts --out-file ./build/lib/index.esm.js",
    "build:es": "cross-env BABEL_ENV=es babel ./src --out-dir ./build/es --ignore 'src/**/*.test.ts,src/**/*.test.js,src/**/*.d.ts' --extensions '.ts,.tsx,.js'",
    "build:umd": "cross-env BABEL_ENV=umd webpack --config ./config/webpack/webpack.prod.js",
    "build:umd:min": "cross-env BABEL_ENV=umd webpack -p --config ./config/webpack/webpack.prod.js",
    "build:copyfiles": "copyfiles -f package.json src/index.d.ts readme.md build",
    "test": "jest --verbose --config jest.json",
    "test:watch": "jest --verbose -i --watchAll --config jest.json",
    "test:coverage": "jest --verbose --coverage --config jest.json"
  },
  "keywords": [],
  "author": "Javier Calzado <javi.calzado@lemoncode.net>",
  "license": "MIT",
  "dependencies": {
    "core-js": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-typescript": "^7.6.0",
    "@types/enzyme": "^3.1.14",
    "@types/jest": "^24.0.18",
    "@types/node": "^8.10.30",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "copyfiles": "^2.1.1",
    "cross-env": "^5.2.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.4",
    "prettier": "^1.18.2",
    "raf": "^3.4.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.11.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  }
}
